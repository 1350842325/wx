<view class="background" style="opacity:{{0.6}}">
  <image class="background-image" mode="scaleToFill"></image>
</view>
<view class="container">

  <view class='amountBg'>

    <view class='img'>
      <open-data type="userAvatarUrl"></open-data>
    </view>
    <view class='account'>
      <view class='nick-name'>
        <open-data type="userNickName" lang="zh_CN"></open-data>
      </view>
      <view class='address'>
        <open-data type="userCountry" lang="zh_CN"></open-data>·
        <open-data type="userProvince" lang="zh_CN"></open-data>·
        <open-data type="userCity" lang="zh_CN"></open-data>
      </view>
    </view>
  </view>


  <view class="weui-flex">
    <view bindtap="onDayClick" class="weui-flex__item">
      <view class="placeholder">日</view>
    </view>
    <view bindtap="onWeekClick" class="weui-flex__item">
      <view class="placeholder">周</view>
    </view>
    <view bindtap="onMonthClick" class="weui-flex__item">
      <view class="placeholder">月</view>
    </view>
  </view>
  <view class="weui-flex">
    <button bindtap="onHarvestClick" class="new" hover-class="btn-hover">测验</button>
    <button  bindtap="onLogClick" class="new" hover-class="btn-hover">记录</button>
    <button bindtap="onAdviceClick" class="new" hover-class="btn-hover">意见</button>
  </view>


</view>