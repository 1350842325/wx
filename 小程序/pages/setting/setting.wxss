.container {
  padding: 15px 10px;
}

.amountBg {
  display: flex;
  flex-direction: row;
  height: 100px;
  background-color: #5495e6;
  align-items: center;
}

.img {
  overflow: hidden;
  display: block;
  margin-left: 20px;
  width: 49px;
  height: 49px;
  border-radius: 50%;
}

.account {
  width: 70%;
  color: #fff;
  margin-left: 10px;
  align-items: center;
}

.nick-name {
  font-family: 'Mcrosoft Yahei';
  font-size: 16px;
}

.address {
  font-size: 13px;
}

.section {
  margin-bottom: 10px;
}

.section_title {
  font-size: 12px;
  color: #999;
}

.section_check {
  margin-right: 5px;
}

.section_tip {
  display: block;
  text-align: right;
  color: #cec9c9;
  padding-bottom: 10px;
}

.section_body {
  margin-top: 15px;
}

.placeholder {
  margin: 5px;
  padding: 0 10px;
  text-align: center;
  background-color: #5495e6;
  height: 2.3em;
  line-height: 2.3em;
  color: white;
}

